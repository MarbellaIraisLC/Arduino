
#include <Adafruit_NeoPixel.h>

//Designamos nuestro pin de datos
#define PIN 6


Adafruit_NeoPixel pixels
= Adafruit_NeoPixel(NUMPIXELS, PIN, NEO_GRB + NEO_KHZ800);

int pausa =200;
void setup() {
// Inicializamos nuestra cinta led RGB
  pixels.begin(); 
  pixels.show(); 
}

void loop() {

 pixels.setPixelColor(0,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(0,0,0,0);
 pixels.setPixelColor(1,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(1,0,0,0);
  pixels.setPixelColor(2,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(2,0,0,0);
  pixels.setPixelColor(3,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(3,0,0,0);
  pixels.setPixelColor(4,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(4,0,0,0);
  pixels.setPixelColor(5,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(5,0,0,0);
  pixels.setPixelColor(6,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(6,0,0,0);
  pixels.setPixelColor(7,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(7,0,0,0);
  pixels.setPixelColor(8,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(8,0,0,0);
  pixels.setPixelColor(9,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(9,0,0,0);
  pixels.setPixelColor(10,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(10,0,0,0);
  pixels.setPixelColor(9,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(9,0,0,0);
  pixels.setPixelColor(8,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(8,0,0,0);
  pixels.setPixelColor(7,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(7,0,0,0);
  pixels.setPixelColor(6,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(6,0,0,0);
  pixels.setPixelColor(5,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(5,0,0,0);
  pixels.setPixelColor(4,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(4,0,0,0);
  pixels.setPixelColor(3,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(3,0,0,0);
  pixels.setPixelColor(2,255,0,0);
 pixels.show();  
 delay(pausa); 
 pixels.setPixelColor(2,0,0,0);

}
